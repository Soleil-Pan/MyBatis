<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pyp.repository.AccountRepository">

    <insert id="save" parameterType="com.pyp.entity.Account">
        insert into t_account(username,password,age) value(#{username},#{password},#{age})
    </insert>
    <update id="update" parameterType="com.pyp.entity.Account">
        update t_account set username = #{username},password = #{password},age = #{age} where id = #{id}
    </update>
    <delete id="deleteById" parameterType="long">
        delete from t_account where id = #{id}
    </delete>
    <select id="findAll" resultType="com.pyp.entity.Account">
        select * from t_account
    </select>
    <select id="findById" parameterType="long" resultType="com.pyp.entity.Account">
        select * from t_account where id =#{id}
    </select>
    <select id="findById2" parameterType="long" resultType="com.pyp.entity.Account">
        select * from t_account where id =#{id}
    </select>
    <select id="findByName" parameterType="string" resultType="com.pyp.entity.Account">
        select * from t_account where username = #{username}
    </select>
    <select id="findByNameAndAge" resultType="com.pyp.entity.Account">
        select * from t_account where username = #{param1} and age = #{param2}
    </select>
    <select id="count" resultType="int">
        select count(id) from t_account
    </select>
    <select id="count2" resultType="Integer">
        select count(id) from t_account
    </select>
    <select id="findNameById" resultType="String">
        select username from t_account where id = #{id}
    </select>

