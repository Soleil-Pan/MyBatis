    <select id="findByAccount" parameterType="com.pyp.entity.Account">
        <where>
            <choose>
                <when test="id != 0">
                    id = #{id}
                </when>
                <when test="username != null">
                    and username = #{username}
                </when>
                <when test="password != null">
                    and password = #{password}
                </when>
                <when test="age != 0">
                    and age = #{age}
                </when>
            </choose>
        </where>
    </select>

